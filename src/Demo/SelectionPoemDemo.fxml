<DialogPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Import a poem">
                     <font>
                        <Font name="Cambria" size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="30.0" />
                     </VBox.margin>
                  </Text>
                  <HBox alignment="CENTER" prefHeight="40.0" prefWidth="600.0" spacing="20.0">
                     <children>
                        <Label fx:id="filePath" prefHeight="19.0" prefWidth="478.0" style="-fx-border-color: black;" text="Text path " />
                        <Button fx:id="searchFile" mnemonicParsing="false" text="Import" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="40.0" prefWidth="600.0" spacing="20.0">
                     <children>
                        <Line endX="60.0" startX="-350.955322265625" startY="0.7928932309150696" />
                     </children>
                  </HBox>
                  <Separator prefHeight="15.0" prefWidth="300.0">
                     <padding>
                        <Insets bottom="20.0" top="20.0" />
                     </padding>
                  </Separator>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Create a new Karaoke demo">
                     <font>
                        <Font name="Cambria" size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </Text>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Characteristics of the demo :">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Text>
                  <HBox alignment="CENTER" prefHeight="66.0" prefWidth="600.0" spacing="50.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="130.0">
                           <children>
                              <Label text="Poem name" />
                              <TextField fx:id="poemName" prefWidth="167.0" promptText="My Name" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="130.0">
                           <children>
                              <Label text="Delay (in sec)" />
                              <TextField fx:id="delay" promptText="Every x seconds" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Label text="Difficulty" />
                        <ChoiceBox fx:id="difficultyChoice" prefWidth="150.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </content>
</DialogPane>
